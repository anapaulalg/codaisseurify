<%= form_for @artist do |f| %>

<p id="notice"><%= notice %></p>

<ul>
  <% @artist.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>

  <%= f.label :name %>
  <%= f.text_field :artist_name %>

  <%= f.label :country %>
  <%= f.text_field :country %>

  <%= f.label :image %>
  <%= f.text_field :image %>

  <%= f.submit (@artist.new_record? ? "Create" : "Update") %>

  <br>
  <hr>
  <%= link_to "[Back to Artists]", root_path %>
<% end %>
