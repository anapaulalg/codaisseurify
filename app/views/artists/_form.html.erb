<%= form_for @artist do |f| %>
  <div class="panel panel-primary">
     <div class="panel-heading">
       <h2><%= Artist %></div></h2>
      <div class="panel-body">
        <p id="notice"><%= notice %></p>

        <ul>
          <% @artist.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>

        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :artist_name, class:"form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :country %>
          <%= f.text_field :country, class:"form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :image %>
          <%= f.text_field :image, class:"form-control" %>
        </div>

        <%= f.submit (@artist.new_record? ? "Create" : "Update"), class: "btn btn-primary" %>

        <hr>
        <%= link_to "Back to Artists", root_path, class: "btn btn-default" %>
      </div>
    </div>
  </div>
<% end %>
