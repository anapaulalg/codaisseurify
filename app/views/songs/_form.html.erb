<%= form_for [@song], :url => artist_songs_path do |f| %>
<div class="panel panel-primary">
   <div class="panel-heading">
     <h2><%= Artist %></div></h2>
    <div class="panel-body">

      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, id: :title, class:"form-control" %>
      </div>

      <div class="from-group">
        <%= f.label :duration %>
        <%= f.text_field :duration, id: :song_duration, class:"form-control" %>
      </div>

<br>
      <div class="actions">
        <%= f.submit (@song.new_record? ? "Create" : "Update"), class: "btn btn-primary" %>
      </div>
    </div>
</div>
<% end %>
