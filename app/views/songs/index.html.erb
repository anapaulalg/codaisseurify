<p id="notice"><%= notice %></p>

<div class="panel panel-primary">
  <div class="panel-heading">
   <h2>Songs</div></h2>
  <div class="panel-body">
    <table>
      <thead>
        <tr>
          <th>Song title</th>
          <th>Duration</th>
          <th>Youtube link</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @songs.each do |song| %>
          <tr>
            <td><%= song.song_title %></td>
            <td><%= song.duration %></td>
            <td><%= song.youtube_link %></td>
            <td><%= link_to 'Show', song, class: "btn btn-default" %></td>
            <td><%= link_to 'Edit', edit_song_path(song), class:"btn btn-default" %></td>
            <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<%= link_to 'Add Song', new_song_path, class: "btn btn-primary" %>
<%= link_to 'Back to artists', artists_path, class: "btn btn-primary" %>
